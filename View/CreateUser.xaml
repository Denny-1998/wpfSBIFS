<UserControl x:Class="wpfSBIFS.View.CreateUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpfSBIFS.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="tbUserName" Width="224" Height="56" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource ModernTextBox}" Margin="66,101,0,0" />

        <TextBox x:Name="pbPassword" Width="224" Height="56" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource ModernTextBox}" Margin="400,101,0,0" />
        
        <Button Width="224" Height="56" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="66,0,0,0" Content="Create" Click="Button_Click" />
        <Button Width="224" Height="56" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="400,0,0,0" Content="Create with random password" />
    </Grid>
</UserControl>
